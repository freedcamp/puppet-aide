#!/bin/sh
TMPFILE=/var/tmp/aide-check.$$
trap "rm -f $TMPFILE" EXIT

<%= @aide_path %> --check >$TMPFILE 2>&1

if [ $? -ne 0 ] ; then
  if [ -t 1 ] ; then
    cat $TMPFILE
  else
    <%= @aide_path %> --update >$TMPFILE 2>&1
    mail -s "AIDE report from `hostname`" <%= @mailto %> < $TMPFILE
    cp -f <%= @db_temp_path %> <%= @db_path %>
  fi
fi
